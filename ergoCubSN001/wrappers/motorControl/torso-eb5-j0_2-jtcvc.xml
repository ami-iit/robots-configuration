<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">
<device xmlns:xi="http://www.w3.org/2001/XInclude" name="torso-eb5-j0_2-jtcvc" type="JointTorqueControlDevice">
    <param name="remote">  /hijackingTrqCrl/torso  </param>
    <param name="joint_list"> (  "torso_roll", "torso_pitch", "torso_yaw"  )</param>

    <group name="TORQUE_CURRENT_PARAMS">
        <param name="kt">(   0.047,  0.047,  0.047   )</param>
        <param name="kfc">(  0.0, 0.0, 0.0  )</param>
        <param name="kp">(  0.0, 0.0, 0.0  )</param>
        <param name="ki">(  0.0, 0.0, 0.0  )</param>
        <param name="max_curr">(  15.0, 15.0, 15.0  )</param>
        <param name="friction_model"> ( "", "", "" ) </param>
        <param name="bwfilter_cutoff_freq"> 0.0 </param>
        <param name="bwfilter_order"> 0 </param>
        <param name="bwfilter_enabled"> false </param>
        <param name="max_output_friction">(  0.0, 0.0, 0.0  )</param>
    </group>

    <group name="FRICTION_PINN">
        <param name="model"> ( "", "", "" ) </param>
        <param name="thread_number"> 1 </param>
        <param name="model_type"> 2 </param>
    </group>


    <!-- Warning, still in milliseconds -->
    <param name="period"> 1 </param>

    <action phase="startup" level="4" type="attach">
        <paramlist name="networks">
            <elem name="torso_joints">  torso-eb5-j0_2-mc </elem>
        </paramlist>
    </action>

    <action phase="shutdown" level="20" type="detach" />
</device>
