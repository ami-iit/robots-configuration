<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">


    <device xmlns:xi="http://www.w3.org/2001/XInclude" name="imu_remapper" type="multipleanalogsensorsremapper">
        <!-- The below parameter names are set from the macro MAS_getTagFromEnum(enum MAS_SensorType) + "Names"
             defined in <yarp/dev/MultipleAnalogSensorsInterfaces.h> and respective device source file -->
     <param name="ThreeAxisGyroscopesNames">
       (l_leg_ft_gyro, l_foot_front_ft_gyro, l_foot_rear_ft_gyro, r_leg_ft_gyro, r_foot_front_ft_gyro, r_foot_rear_ft_gyro)
     </param>
     <param name="ThreeAxisLinearAccelerometersNames">
       (l_leg_ft_acc, l_foot_front_ft_acc, l_foot_rear_ft_acc, r_leg_ft_acc, r_foot_front_ft_acc, r_foot_rear_ft_acc)
     </param>
        <action phase="startup" level="5" type="attach">
            <paramlist name="networks">
                <elem name="left_leg-eb8-j0_3-inertial">  left_leg-eb8-j0_3-inertial </elem>
                <elem name="left_leg-eb9-j4_5-inertial">  left_leg-eb9-j4_5-inertial </elem>
                <elem name="right_leg-eb6-j0_3-inertial">  right_leg-eb6-j0_3-inertial </elem>
                <elem name="right_leg-eb7-j4_5-inertial">  right_leg-eb7-j4_5-inertial </elem>
            </paramlist>
        </action>

        <action phase="shutdown" level="20" type="detach" />
    </device>
